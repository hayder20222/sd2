extends layout
block content
    h1 Student Details
    h2 #{student.name} (ID: #{student.id})
    
    if programme.length > 0
        h3 Programme: #{programme[0].programme_name}
    else
        h3 Programme: Not enrolled
    
    h3 Modules:
    if modules.length > 0
        ul
            for module in modules
                li #{module.code}: #{module.name}
    else
        p No modules assigned
    
    br
    a(href='/all-students') Back to All Students
    |  | 
    a(href='/') Home